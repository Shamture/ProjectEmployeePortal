<div class="container" style="padding:25px;">
  <h3 class="text-center" style="color: #08AAB1">Edit Resource</h3>
  <form>
    <div class="form-group">
      <label for="upload_photo">Upload Photo</label>
      <input type="file" class="form-control-file" id="upload_photo"/>
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" value="{{story.title}}" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" rows="5" required>{{story.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="Content">Content</label>
      <textarea class="form-control" id="content" rows="5" required>{{story.content}}</textarea>
    </div>
    <div class="form group" style="padding-bottom: 20px;">
        <label for="Featured">Featured</label>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="featured" id="yes"> Yes
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="featured" id="no"> No
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
</div>