<div class="create_job_container" style="padding: 20px;">
  <!-- Check if admin -->
  {{!-- {{#if_equals user.role_name "administrator"}} --}}  
  <h3 class="text-center" style="color: #08AAB1">Post a Job</h3>
  <form>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="company" style="color: #08AAB1"> Company </label>
          <input type="text" class="form-control" name="company" required>
        </div>
        <div class="form-group">
          <label for="position" style="color: #08AAB1"> Position </label>
          <input type="text" class="form-control" name="position"  required>
        </div>
        <div class="form-group">
          <label for="field" style="color: #08AAB1"> Job Field </label>
          <input type="text" class="form-control" name="field" required>
        </div>
        <div class="form-group">
          <label for="location" style="color: #08AAB1"> Location </label>
          <input type="text" class="form-control" name="location" required>
        </div>
        <div class="form-group">
          <label for="email" style="color: #08AAB1"> Email </label>
          <input type="text" class="form-control" name="email" required>
        </div>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet" />
        <div class="form-group">
          <label for="icon" style="color: #08AAB1">Icon</label>
          <select class="form-control" id="icon">
            <option value="fas fa-rocket">&#xf135; Rocket</option>
            <option value="fas fa-flask">&#xf0c3; Flask</option>
            <option value="fas fa-heartbeat">&#xf21e; Biology</option>
            <option value="fas fa-code">&#xf121; Code</option>
            <option value="fas fa-desktop">&#xf108; Desktop</option>
            <option value="fas fa-plug">&#xf1e6; Plug</option>
            <option value="fas fa-cogs">&#xf085; Cogs</option>
            <option value="fas fa-leaf">&#xf06c; Leaf</option>
            <option value="fas fa-building">&#xf1ad; Building</option>
         </select>
        </div>
    </div>
      <div class="col">
        <div class="form-group">
          <label for="experience" style="color: #08AAB1"> Experience Description </label>
          <textarea type="text" class="form-control" rows="10" name="experience" required></textarea>
        </div>
        <div class="form-group" style="margin:0px">
          <label for="jobDescription" style="color: #08AAB1;"> Job Description </label>
          <textarea type="text" class="form-control" rows="10" name="jobDescription" required></textarea>
        </div>      
        <div class="text-right" style="padding:7px">
          <button type="submit" class="btn btn-primary"> Publish </button>
        </div>  
      </div>
    </div>
  </form>
  {{!-- {{/if_equals}} --}}

</div>
