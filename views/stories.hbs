<div class="title">
  <h2 class="story-title"> Testimonials and Resources <h2>
  <div class="story-card-deck">
    {{#each stories}}
      {{#if image}}
        <div class="content">
          <div class="story-card">
           <a href="/story">
            <div class="content-overlay"></div>

              <img class="card-img-top" src={{image}}>
              <!-- Title -->
              <h4 class="story-title">{{title}}</h4>
              <!-- Text -->
              <p class="story-text">{{author}}</p>
              <div class="content-details fadeIn-top">
                <h3>{{description}}</h3>
              </div>
          </a>
          </div>
        </div>
      {{else}}
        <div class="content">
          <div class="story-card-no-img">
          <a href="/story">
            <div class="content-overlay"></div>
              <!-- Title -->
              <h3 class="story-title-no-img">{{title}}</h3>
              <!-- Text -->
              <h5 class="story-text-no-img">{{author}}</h5>
              <div class="content-details fadeIn-top">
                <h3>{{description}}</h3>
              </div>
          </a>
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>
