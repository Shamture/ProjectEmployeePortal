<div style="margin: 0 auto" id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each stories}}
      <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" class="{{#if_equals @index 0}}active{{/if_equals}}"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner" role="listbox">
    {{#each stories}}
    <div style="width: 100%;" class="carousel-item {{#if_equals @index 0}}active{{/if_equals}}">
      <img style="width: 100%; top:0; bottom:0; margin:auto;" src="{{this.story_img}}">
      <div class="carousel-caption d-none d-md-block">
        <h1>{{this.title}}</h1>
        <p>{{this.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
