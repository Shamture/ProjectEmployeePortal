<!-- Page Header -->
    <header class="masthead">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1>{{title}}</h1>
              <h2 class="subheading">{{description}}</h2>
              <span class="meta">Posted by {{author}} on {{date}}</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p>{{text}}</p>
          </div>
        </div>
      </div>

